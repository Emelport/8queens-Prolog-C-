<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="nQueens.MainWindow"
        Title="8 Queens" Width="200" Height="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="PrevButton" Content="Anterior" Click="OnPrevButtonClick" IsEnabled="False"/>
            <Button x:Name="NextButton" Content="Siguiente" Click="OnNextButtonClick" IsEnabled="False"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="SolutionsTextBlock" 
                       FontFamily="Courier New" 
                       FontSize="14" 
                       TextWrapping="Wrap" 
                       Margin="10"/>
        </ScrollViewer>
    </StackPanel>
</Window>